@tailwind base;
@tailwind components;
@tailwind utilities;

/* Custom styles here */
body {
  background: #ffffff;  /* ✅ Putih */
  color: #000000;       /* ✅ Teks hitam */
}

.header {
  border-bottom: 4px solid #dc2626; /* ✅ Merah YouTube */
}

button {
  background-color: #dc2626;
  color: white;
  border: none;
  padding: 8px 16px;
  border-radius: 6px;
  cursor: pointer;
}

button:hover {
  background-color: #b91c1c;
}

video {
  width: 100%;
  border-radius: 10px;
}
